generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id             String         @id @default(cuid())
  nome           String
  slug           String
  description    String
  avatarImageUrl String
  coverImageUrl  String
  orders         Order[]
  /**
   * INDICA QUE ESTE RESTAUIRANTE PODE TER MUITOS CATEGORIAS DE MENU
   * E TAMBEM INDICA A RELAÇÃO DE UM RESTAURANTE COM MUITOS CATEGORIAS DE MENU
   */
  menuCategories MenuCategory[]
  products       Product[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model MenuCategory {
  id           String     @id @default(cuid())
  nome         String
  // indica a referenciação de um restaurante
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id]) // este campo nao sera salvo no banco servira somente para referenciar o restaurante
  products     Product[]
  restaurantId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
}

model Product {
  id             String         @id @default(cuid())
  nome           String
  description    String
  price          Float
  imageUrl       String
  ingredients    String[]
  // indica a referenciação de um restaurante
  orderProducts  OrderProduct[]
  restaurant     Restaurant     @relation(fields: [restaurantId], references: [id])
  menuCategory   MenuCategory   @relation(fields: [menuCategoryId], references: [id])
  restaurantId   String
  menuCategoryId String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Order {
  id                Int               @id @default(autoincrement())
  total             Float
  restaurantId      String
  restaurant        Restaurant        @relation(fields: [restaurantId], references: [id])
  status            OrderStatus
  consumptionMethod ConsumptionMethod
  orderProducts     OrderProduct[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt
}

model OrderProduct {
  id        Int      @id @default(autoincrement())
  productId String
  orderId   Int
  product   Product  @relation(fields: [productId], references: [id])
  order     Order    @relation(fields: [orderId], references: [id])
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  PENDING
  CONFIRMED
  IN_PREPARING
}

enum ConsumptionMethod {
  LOCAL
  TAKEOUT
}
